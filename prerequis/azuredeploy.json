{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "publicIPAddressName": {
            "type": "string",
            "defaultValue": "IpMgt",
            "metadata": {
                "description": "Nom de l'ip de Mgt"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "adVNET",
            "metadata": {
                "description": "Virtual network name."
            }
        },
        "virtualNetworkAddressRange": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "Virtual network address range."
            }
        },
        "AdSubnetName": {
            "type": "string",
            "defaultValue": "adSubnet",
            "metadata": {
                "description": "Subnet name."
            }
        },
        "AdSubnetRange": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "description": "Subnet IP range."
            }
        },
        "HostsSubnetName": {
            "type": "string",
            "defaultValue": "HostsSubnet",
            "metadata": {
                "description": "Subnet name."
            }
        },
        "HostssubnetRange": {
            "type": "string",
            "defaultValue": "10.0.1.0/24",
            "metadata": {
                "description": "Subnet IP range."
            }
        },
        "AzureBastionSubnetName": {
            "type": "string",
            "defaultValue": "AzureBastionSubnet",
            "metadata": {
                "description": "Subnet name."
            }
        },
        "AzureBastionSubnetRange": {
            "type": "string",
            "defaultValue": "10.0.2.0/24",
            "metadata": {
                "description": "Subnet IP range."
            }
        },
        "AdnetworkInterfaceName": {
            "type": "string",
            "defaultValue": "AdNic",
            "metadata": {
                "description": "AD Nic Name"
            }

        },
        "AdprivateIPAddress": {
            "type": "string",
            "defaultValue": "10.0.0.4",
            "metadata": {
                "description": "AD Ip address"
            }
        },
        "AdvirtualMachineName": {
            "type": "string",
            "defaultValue": "VM-AD-0",
            "metadata": {
                "description": "VM AD name"
            }
        },
        "AdvmSize": {
            "type": "string",
            "defaultValue": "Standard_A2_v2",
            "metadata": {
                "description": "Size of the VM for the controller"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the administrator account of the new VM and domain"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "pierrc",
            "metadata": {
                "description": "The name of the administrator account of the new VM and domain"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "ma-pme.local",
            "metadata": {
                "description": "The FQDN of the Active Directory Domain to be created"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-02-01",
            "name": "[parameters('publicIPAddressName')]",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-11-01",
            "name": "VNet",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Pierre-Chesne/QuickStart-WindowsVirtualDesktop/master/prerequis/nestedtemplates/vnet.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[parameters('virtualNetworkAddressRange')]"
                    },
                    "AdSubnetName": {
                        "value": "[parameters('AdSubnetName')]"
                    },
                    "AdSubnetRange": {
                        "value": "[parameters('AdSubnetRange')]"
                    },
                    "HostsSubnetName": {
                        "value": "[parameters('HostsSubnetName')]"
                    },
                    "HostssubnetRange": {
                        "value": "[parameters('HostssubnetRange')]"
                    },
                    "AzureBastionSubnetName": {
                        "value": "[parameters('AzureBastionSubnetName')]"
                    },
                    "AzureBastionSubnetRange": {
                        "value": "[parameters('AzureBastionSubnetRange')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-02-01",
            "name": "[parameters('AdnetworkInterfaceName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "Vnet"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('AdprivateIPAddress')]",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('AdsubnetName'))]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[parameters('AdvirtualMachineName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('AdnetworkInterfaceName')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmsize": "[parameters('AdvmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('AdvirtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"

                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('AdvirtualMachineName'),'_OSDisk')]",
                        "caching": "ReadOnly",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(parameters('AdvirtualMachineName'), '_DataDisk')]",
                            "caching": "ReadWrite",
                            "createOption": "Empty",
                            "diskSizeGB": 20,
                            "managedDisk": {
                                "storageAccountType": "StandardSSD_LRS"
                            },
                            "lun": 0

                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('AdnetworkInterfaceName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "apiVersion": "2019-03-01",
                    "name": "CreateADForest",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[parameters('AdvirtualMachineName')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.19",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "https://raw.githubusercontent.com/Pierre-Chesne/QuickStart-WindowsVirtualDesktop/master/prerequis/DSC/CreateADPDC.zip",
                            "ConfigurationFunction": "CreateADPDC.ps1\\CreateADPDC",
                            "Properties": {
                                "DomainName": "[parameters('domainName')]",
                                "AdminCreds": {
                                    "UserName": "[parameters('adminUsername')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('adminPassword')]"
                            }
                        }
                    }
                }

            ]
        }
    ]
}